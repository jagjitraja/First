<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/note_view_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="jsb.com.notetaker.Fragments.NoteViewFragment">

	<LinearLayout
		android:id="@+id/viewHeader"
		android:layout_width="match_parent"
		android:layout_height="110dp"
		android:background="@color/shadow"
		android:padding="@dimen/padding">

		<ImageView
			android:id="@+id/note_item_icon"
			android:layout_width="100dp"
			android:layout_height="100dp"
			app:srcCompat="@drawable/s"/>

		<RelativeLayout
			android:layout_width="wrap_content"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/note_title_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/margin"
				android:text="TextView"
				android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
				android:layout_weight="1"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:id="@+id/date_label_Note_view"
				android:text="@string/due"
				android:layout_centerVertical="true"
				android:layout_alignParentStart="false"
				android:layout_alignParentBottom="true"
				android:layout_alignStart="@id/note_title_view"
				android:layout_margin="@dimen/margin"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:padding="0dp"
				android:textAppearance="@style/TextAppearance.AppCompat.Small"
				android:id="@+id/date_Note_view"
				android:textColor="@color/colorAccent"
				android:hint="@string/due_date"
				android:layout_alignParentBottom="true"
				android:layout_toEndOf="@+id/date_label_Note_view"
				android:layout_margin="@dimen/margin"/>

		</RelativeLayout>




	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/viewHeader"
		android:padding="@dimen/padding">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<TextView
				android:id="@+id/note_body_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/margin"
				android:text="TextView"/>
		</LinearLayout>
	</ScrollView>

</RelativeLayout>
