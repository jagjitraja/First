<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jsb.com.notetaker.Fragments.TimePickerDialogue"
	android:background="@color/transparent">

	<DatePicker
		android:layout_width="@dimen/dialogue_width"
		android:layout_height="@dimen/dialogue_height"
		android:layout_centerVertical="true"
		android:layout_centerHorizontal="true"
		android:layout_centerInParent="true"
		android:id="@+id/datePicker"
		android:calendarViewShown="false"/>


    <Button
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/next"
		android:id="@+id/changeButton"
		android:layout_alignBottom="@+id/datePicker"
		android:layout_alignEnd="@+id/datePicker"/>

    <TimePicker
        android:layout_width="@dimen/dialogue_width"
        android:layout_height="@dimen/dialogue_height"
        android:id="@+id/timePicker"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
